<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<fx:root alignment="CENTER" prefHeight="850.0" prefWidth="1200.0" spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="conteneurChoix" alignment="TOP_CENTER" spacing="5.0">
        <Label alignment="CENTER" contentDisplay="CENTER" text="Combien de joueurs doit-il y avoir ?" textAlignment="JUSTIFY" />
        <TextField fx:id="nbJoueursChoix" maxWidth="30.0" promptText="4" />
        <Button fx:id="nbJoueursChoisi" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Continuer" />
        <Label fx:id="erreur" textFill="#b90c0c" />
    </VBox>
    <Button fx:id="commencer" disable="true" style="-fx-background-color: transparent">
        <graphic>
            <ImageView>
                <Image url="@../images/boutons/trains.png" />
                <fitWidth>120</fitWidth>
                <fitHeight>90</fitHeight>
            </ImageView>
        </graphic>
    </Button>
</fx:root>
