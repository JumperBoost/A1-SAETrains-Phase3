<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <HBox fx:id="cartesEnMain" />
    <fx:include fx:id="plateau" source="plateau.fxml" />
    <HBox fx:id="footer" alignment="CENTER">
        <HBox>
            <VBox>
                <Label fx:id="nomJoueur" style="-fx-text-fill: red">
                    <font>
                        <Font name="Comic Sans MS" size="30.0" />
                    </font>
                </Label>
                <Label fx:id="instruction">
                    <font>
                        <Font name="Comic Sans MS" size="24.0" />
                    </font>
                </Label>
            </VBox>
            <Button fx:id="passer" style="-fx-background-color: transparent">
                <graphic>
                    <!--
                    <ImageView>
                        <Image url="/images/boutons/passer.png" />
                        <fitWidth>80</fitWidth>
                        <fitHeight>80</fitHeight>
                    </ImageView> -->
                </graphic>
            </Button>
        </HBox>
    </HBox>
</fx:root>
